<%= form_for @comment, :url => { :action => "update" } do |f| %>
    <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :body %><br>
        <%= f.text_area :body, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.submit %>
    </div>
<% end %>